---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const fullName = import.meta.env.PUBLIC_FULL_NAME;
console.log(fullName)

const posts = (await getCollection("blog"))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .filter((post) => post.data.published);
---

<BaseLayout sideBarActiveItemID="home" title="Homepage" description="">
    <div class="pb-12 mt-5">
        <div class="text-xl py-1">Hey there ðŸ‘‹</div>
        <h1 class="text-5xl font-bold">I'm {fullName}</h1>
        <h2 class="text-3xl py-3 font-bold">
            Computer Science Student at RWTH Aachen
        </h2>
        <div class="py-2">
            <text class="text-lg">
                I am working as a student researcher under <a href="https://www.linkedin.com/in/wvdaalst/" class="link"
                    target="_blank">Wil van der Aalst</a>. I want to use my work to make sure AI is developed safely and with everybody's happiness in mind.
            </text>
        </div>
        <div class="mt-8 flex flex-col sm:flex-row">
            <a
                class="btn mb-4"
                href="https://www.linkedin.com/in/felixkrueckel/"
                target="_blank">Let's connect!</a
            >
            <a
                href="google drive link"
                target="_blank"
                class="btn btn-outline sm:ml-5"
            >
                Download Resume
            </a>
        </div>
    </div>

    <div>
        <div class="text-3xl w-full font-bold mb-2">
            Interested? Learn more below.
        </div>
    </div>

    <!-- featured links and blog posts -->

    {
        posts.map((post) => {
            if (post.data.homepage) {
                if (post.data.link) {
                    return (
                        <>
                            <HorizontalCard
                                title={post.data.title}
                                img={post.data.heroImage}
                                desc={post.data.description}
                                url={post.data.link}
                                target="_blank"
                                badge={post.data.badge}
                                tags={post.data.tags}
                            />
                            <div class="divider my-0" />
                        </>
                    );
                } else {
                    return (
                        <>
                            <HorizontalCard
                                title={post.data.title}
                                img={post.data.heroImage}
                                desc={post.data.description}
                                url={"/blog/" + post.slug}
                                target="_self"
                                badge={post.data.badge}
                                tags={post.data.tags}
                            />
                            <div class="divider my-0" />
                        </>
                    );
                }
            }
        })
    }
    <a href="/blog" class="btn btn-ghost">Learn more about me...</a>
</BaseLayout>
